{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input class="form-control" value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Username</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input class="form-control" value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes or Examples of Issue</label>
        {{textarea rows=3 class="form-control" value=notes id="notes"}}
      </div>
      <button class="btn" {{action "saveQuestion"}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action "questionFormShow"}}>New Question</button>
{{/if}}
