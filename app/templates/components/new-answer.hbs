{{#if addNewAnswer}}
  <h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input class="form-control" value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Username</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input class="form-control" value=date id="date"}}
      </div>
      <button class="btn" {{action "saveAnswer"}}>Save</button>
    </form>
  </div>
{{else}}
  <br><button class="btn" {{action "answerFormShow"}}>New Answer</button>
{{/if}}
