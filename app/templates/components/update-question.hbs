{{#if updateQuestionForm}}
  <h1>Update Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input class="form-control" value=content id="content" placeholder=question.content}}
      </div>
      <div class="form-group">
        <label for="author">Username</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input class="form-control" value=date id="date" placeholder=question.date}}
      </div>
      <div class="form-group">
        <label for="notes">Notes or Examples of Issue</label>
        {{textarea rows=3 class="form-control" value=notes id="notes" placeholder=question.notes}}
      </div>
      <button class="btn" {{action "update" question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action "updateQuestionForm"}}>Update Question</button>
{{/if}}
